@model BookList.Models.Books

<head>
    <title>Virtual Book Store | Book Details</title>
</head>


<h1>Virtual Book Store</h1>
<h3>Book Details</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.BookName)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.Subcategory)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.Subcategory)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.Pages)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.Pages)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.AddedBy)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.AddedBy)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.ModifiedBy)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.AddedOn)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.AddedOn)
        </dd>
        <dt class="col-sm-2" id="c1">
            @Html.DisplayNameFor(model => model.LastModifiedOn)
        </dt>
        <dd class="col-sm-10" id="c1">
            @Html.DisplayFor(model => model.LastModifiedOn)
        </dd>
    </dl>
</div>
<div>
    <input type="button" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Books", new { name = Model.BookName })'" /> |
    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#delist-modal">Delist</button> |
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal"> Delete</button> |
    <input type="button" value="Cancel" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Books")'" /> 
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Book</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete this book?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary px-5" data-dismiss="modal">No</button>
                    <form asp-controller="Books" asp-action="Delete" asp-route-name="@Model.BookName" method="post">
                        <button type="submit" class="btn btn-danger px-5">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="delist-modal" tabindex="-1" role="dialog" aria-labelledby="delistModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="delistModalLabel">Delist Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you want to delist the book?</p>
            </div>
            <div class="modal-footer">
                
                    <button type="button" class="btn btn-outline-secondary px-5"data-dismiss="modal">No</button>
                   
                    <form asp-controller="Books" asp-action="Delist" asp-route-name="@Model.BookName" method="post">
                        <button type="submit" class="btn btn-warning px-5">Yes</button>
                    </form>
            </div>
        </div>
    </div>
</div>



